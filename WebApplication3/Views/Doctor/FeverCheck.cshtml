
@{
    ViewData["Title"] = "FeverCheck";
}

<body>
    <div><h1>FeverCheck</h1></div>

    <div>
        <form asp-action="FeverCheck" method="post">
            <label>Please enter your temperatur  </label>
            <input type="number" placeholder="Please enter here " name="input" />  <!-- name för controller-->
            <input type="submit" value="Check temp" class="btn btn-primary" />
        </form>

        @if (ViewBag.Result != null)
        {
            <div>
                <h4 style="border-style: ridge">
                    <p>Message</p>
                    <p>@ViewBag.Result</p>
                </h4>
            </div>
        }
    </div>
    <h7 style="border-style: ridge">Fever Check View till Doctor Controller </h7>

</body>